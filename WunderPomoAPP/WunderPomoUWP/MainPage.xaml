<Page x:Class="WunderPomoUWP.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:WunderPomoUWP"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <ListBox x:Name="FavoriteListBox"  />
            <ListBox x:Name="WunderListBox" />
            <ListBox x:Name="LocalListBox" ItemsSource="{Binding LocalTaskList}" ItemTemplate="{StaticResource TaskItemDataTemplate}" />

        </StackPanel>
    </Grid>
</Page>
